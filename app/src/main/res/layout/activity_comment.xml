<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.CommentActivity">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/main_comment_toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo_title"/>
</androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/my_toolbar_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/colorDivision"
        android:layout_below="@id/main_comment_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/my_toolbar_division"/>

    <Button
        android:id="@+id/comment_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_margin="10dp"
        android:layout_below="@id/comment_recyclerview"
        android:textColor="@color/blue"
        android:background="#00000000"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/comment_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_account"
        android:layout_below="@id/comment_recyclerview" />
    <EditText
        android:id="@+id/comment_edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/comment_recyclerview"
        android:layout_toRightOf="@id/comment_profile_image"
        android:layout_toLeftOf="@id/comment_send_button"/>

</RelativeLayout>