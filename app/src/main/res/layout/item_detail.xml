<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/detail_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7.5dp"/>
        <TextView
            android:id="@+id/detail_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/detail_image_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp">
        <ImageView
            android:id="@+id/detail_heart_click"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_favorite_border"/>
        <ImageView
            android:id="@+id/detail_comment_click"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_chat_black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_heart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="좋아요 0"/>
    <TextView
        android:id="@+id/detail_content_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="내용 설명"/>
</LinearLayout>